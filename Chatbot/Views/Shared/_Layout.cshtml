<!DOCTYPE html>
<html>
<head style="height:100%;">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Chatbot transport</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>


    <nav class="navbar navbar-expand-lg navbar-light bg-dark fixed-top">
        <a class="navbar-brand text-white" href="@Url.Action("Index", "Home")">Chatbot transport</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto navbar-dark">
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">Accueil <span class="sr-only">(current)</span></a>
                </li>
                <li>@Html.ActionLink(linkText: "Diagnostics", actionName: "Index", controllerName: "Diagnostics", routeValues: new { }, htmlAttributes: new { @class = "nav-link" })</li>
                <li>@Html.ActionLink(linkText: "Facts", actionName: "Index", controllerName: "Facts", routeValues: new { }, htmlAttributes: new { @class = "nav-link" })</li>
                <li>@Html.ActionLink(linkText: "Rules", actionName: "Index", controllerName: "Rules", routeValues: new { }, htmlAttributes: new { @class = "nav-link" })</li>
                <li>@Html.ActionLink(linkText: "RuleFact", actionName: "Index", controllerName: "RuleFacts", routeValues: new { }, htmlAttributes: new { @class = "nav-link" })</li>
                <li>@Html.ActionLink(linkText: "Vehicles", actionName: "Index", controllerName: "Vehicles", routeValues: new { }, htmlAttributes: new { @class = "nav-link" })</li>
                <li>@Html.ActionLink(linkText: "Paths", actionName: "Index", controllerName: "Paths", routeValues: new { }, htmlAttributes: new { @class = "nav-link" })</li>
                <li>@Html.ActionLink(linkText: "Stops", actionName: "Index", controllerName: "Stops", routeValues: new { }, htmlAttributes: new { @class = "nav-link" })</li>
                <li>@Html.ActionLink(linkText: "Travels", actionName: "Index", controllerName: "Travels", routeValues: new { }, htmlAttributes: new { @class = "nav-link" })</li>
                <li>@Html.ActionLink(linkText: "Reservations", actionName: "Index", controllerName: "Reservations", routeValues: new { }, htmlAttributes: new { @class = "nav-link" })</li>
            </ul>
        </div>
    </nav>

    <div class="content">
        <div class="container body-content ">
            @RenderBody()
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
